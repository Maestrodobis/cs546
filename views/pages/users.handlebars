<article>
    <h2>All Users</h2>
    <table id="usersTable">
        <thead>
        <tr>
            <th>Username</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Role</th>
        </tr>
        </thead>
        <tbody>
            {{#each users}}
                <tr class="itemRow">
                    <td>{{username}}</td>
                    <td>{{firstName}}</td>
                    <td>{{lastName}}</td>
                    <td>{{roles}}</td>
                </tr>
            {{/each}}
        </tbody>
    </table>


    <h2>Add User</h2>
    <form id="addUserForm">
        <div class="formGroup">
            <label for="username">Username</label>
            <input name="username" id="username" type="text" placeholder="username"/>
        </div>
        <div class="formGroup">
            <label for="password">Password</label>
            <input name="password" id="password" type="password" placeholder="password"/>
        </div>
        <div class="formGroup">
            <label for="firstName">First Name</label>
            <input name="firstName" id="firstName" type="firstName" placeholder="First Name"/>
        </div>
        <div class="formGroup">
            <label for="lastName">Last Name</label>
            <input name="lastName" id="lastName" type="lastName" placeholder="Last Name"/>
        </div>
        <div class="formGroup">
            <label for="roles">Role</label>
            <input name="roles" id="roles" type="roles" placeholder="Role"/>
        </div>
        <input id="submitForm" type="submit" value="Add User"/>
    </form>
    <div class="hidden" id="errorContainer">
        <div id="errorText"></div>
    </div>

</article>