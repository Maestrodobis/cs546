<article class="item">
    <h1 class ="itemName" >{{item.name}}</h1>
        <p class = "category">{{item.category}}</p>
        <p class = "quantity"> {{item.quantity}}</p>
        <p class = "price">${{item.price}}</p>
        <p class = "description">{{item.description}}</p>     
    <form id="updateItemForm">
            {{#if admin}}
            <h2>Update Item</h2>
            <div class="formGroup">
                <label for="name">Name</label>
                <input name="name" id="name" type="text" placeholder="item name"/>
            </div>
            <div class="formGroup">
                <label for="category">Category</label>
                <input name="category" id="category" type="text" placeholder="clothing, kitchenware, electronics, etc."/>
            </div>
            <div class="formGroup">
                <label for="price">Price</label>
                <input name="price" id="price" min ="0" step=".01" type="number" placeholder="0.00"/>
            </div>
            <div class="formGroup">
                <label for="description">Description</label>
                <textarea  id="description" name="description"></textarea>
            </div>
            {{/if}}
            <div class="formGroup">
                <label for="quantity">Quantity</label>
                <input name="quantity" id="quantity" min ="0" type="number" placeholder="0"/>
            </div>
            <input type="submit"/>
    </form>
    {{#if admin}}
        <div class="hidden" id="itemId" value={{item._id}}></div>
        <button class="deleteButton" id="deleteItem">Delete Item</button>
    {{/if}}
    <div class="hidden" id="confirmDeleteWrapper">
            <p>Delete user {{item.name}}?</p>
            <button id="confirmButton">Confirm</button>
            <button id="cancelButton">Cancel</button>
    </div>
</article>